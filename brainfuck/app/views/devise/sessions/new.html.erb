<h2 style="margin-top:10%; font-size:35px;margin-left:5%;">Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div style="margin-top:1%; font-size:20px;">
<%= f.label :email %> ( or <%= link_to "Sign up", new_registration_path(resource_name) %> ) <br />
<%= f.email_field :email, autofocus: true %>
</div>

<div style="margin-top:1%; font-size:20px;"><%= f.label :password %><br /> 
<%= f.password_field :password, autocomplete: "off" %></div>

<% if devise_mapping.rememberable? -%>
<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
<% end -%>

<div style="margin-top:10px;">
    <a style="margin-right:0%; font-size:20px;"> <%= f.submit "Sign in" %> </a>
    <!-- <span style="margin-left:0.5%;"> -->
        <a href="http://localhost:3000/users/auth/facebook" >
            <img src="http://opu.ua/images/social_facebook_c.png" style=" width: 32px; height: 32px;"> </a>
        <a href="http://localhost:3000/users/auth/twitter" >
            <img src="http://playhots.net/img/icons/other/twitter.png" style=" width: 32px; height: 32px;"> </a>
        <a href="http://localhost:3000/users/auth/vkontakte" >
            <img src="http://playhots.net/img/icons/other/vk.png" style=" width: 32px; height: 32px;"> </a>
    <!-- </span> -->
</div>
<% end %>



